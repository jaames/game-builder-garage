{
  "compilerOptions": {
      "module": "esnext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "target": "es5",
      "lib": [
        "ES2020",
        "dom",
      ],
      "jsx": "react",
      "jsxFactory": "h",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "downlevelIteration": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}